<h2>Edit Pokemon</h2>

  <form action="/<%= @pokemon.id %>" method="post">
  <input type="hidden" name="_method" value="put">

    <label for="">Pokemon Name</label>
    <input type="text" name="pokemon[name]" value="<%= @pokemon.name %>">

    <label for="">Type</label>
    <input type="text" name="pokemon[poke_type]" value="<%= @pokemon.poke_type %>">

    <label for="">Combat Power</label>
    <input type="text" name="pokemon[cp]" value="<%= @pokemon.cp %>">

    <label for="">Picture URL</label>
    <input type="text" name="pokemon[img_url]" value="<%= @pokemon.img_url %>">

    <button type="submit">Submit</button>
  </form>
